<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".StartDate">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Garage Name"
        android:textSize="30dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintVertical_bias="0.972">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set your parking duration"
                android:textSize="20dp"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:textColor="@android:color/black"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textSize="20dp"
                android:textColor="@color/projectColor"
                android:text="Reservation begins at" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Start Date"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/date"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/txt_date_picker"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_layout"
        android:inputType="date"
        android:padding="15dp"
        android:text="  DD-MM-YYYY"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:padding="10dp"
                android:text="Start Time"
                android:textColor="@android:color/black"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/time"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/startt"
                    android:layout_width="225dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/background_layout"
                    android:gravity="center"
                    android:inputType="datetime"
                    android:padding="10sp"
                    android:text="  0:0"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                    android:textColor="@android:color/black" />

            </LinearLayout>
            <Button
                android:id="@+id/Continue_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-medium"
                android:text="continue"
                android:textAllCaps="false"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textSize="25dp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>